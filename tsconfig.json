{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@taskdashboard/ui": [
                "./packages/ui/src"
            ],
            "@taskdashboard/ui/*": [
                "./packages/ui/src/*"
            ],
            "@taskdashboard/types": [
                "./packages/types/src"
            ],
            "@taskdashboard/types/*": [
                "./packages/types/src/*"
            ],
            "@taskdashboard/utils": [
                "./packages/utils/src"
            ],
            "@taskdashboard/utils/*": [
                "./packages/utils/src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        ".turbo"
    ]
}